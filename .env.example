# Copy this file to .env and fill in your actual values

# Discord Bot Token (get from https://discord.com/developers/applications)
TOKEN=your_discord_bot_token_here

# MongoDB Connection URI
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017

# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/minigame_bot

# Environment
NODE_ENV=development

# Database
DB_PATH=./database/bot.db

# Bot Settings
PREFIX=!
BOT_NAME=Minigame Bot

# Game Settings
DAILY_REWARD=500
MAX_GUESS_ATTEMPTS=7
TRIVIA_TIME_LIMIT=15000
SLOTS_MIN_BET=50
COINFLIP_MIN_BET=50

# Mining Settings
MIN_PICKAXE_DAMAGE=1
MAX_PICKAXE_DAMAGE=3
MINING_TIME_LIMIT=30000